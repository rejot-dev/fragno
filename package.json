{
  "name": "@fragno-dev/root",
  "repository": {
    "type": "git",
    "url": "https://github.com/rejot-dev/fragno.git"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@eslint/js": "^9.37.0",
    "@nanostores/query": "^0.3.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "eslint": "^9.37.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-refresh": "^0.4.23",
    "eslint-plugin-tailwindcss": "^3.18.2",
    "lefthook": "^1.13.6",
    "nanostores": "^1.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-svelte": "^3.4.0",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsdown": "^0.15.6",
    "turbo": "^2.5.8",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.2.20"
  },
  "homepage": "https://fragno.dev",
  "license": "MIT",
  "packageManager": "bun@1.2.20",
  "private": true,
  "scripts": {
    "dev": "turbo watch --ui tui dev",
    "cli:dev": "bun run apps/fragno-cli/src/cli.ts --",
    "dev+": "turbo watch --ui tui --concurrency 20 dev types:check",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "format:changed": "prettier -u --write $(git ls-files --others --exclude-standard && git diff --name-only --diff-filter=d HEAD | sort -u | xargs)",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "find . -type d \\( -name dist -o -name node_modules -o -name .turbo -o -name .next -o -name .output -o -name .nuxt -o -name .react-router -o -name .open-next -o -name .source -o -name .svelte-kit \\) -prune -exec rm -rf {} + -o -name tsconfig.tsbuildinfo -o -name coverage.json -exec rm -f {} +",
    "clean:install": "bun run clean && bun install --linker=isolated",
    "build": "turbo run build",
    "build:watch": "turbo watch build",
    "build:ui": "turbo watch --ui tui build",
    "build:clean": "turbo run build --force",
    "types:check": "turbo run types:check",
    "types:check:watch": "turbo watch types:check",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "test:coverage": "turbo run test && turbo run collect-json-reports merge-json-reports report --filter=@fragno-private/vitest-config",
    "ci:version": "changeset version && bun update && bun install --linker=isolated",
    "ci:publish": "bun run scripts/src/publish-packages.ts --access public && changeset tag",
    "diff:lockfile": "git -c core.attributesfile=/dev/null --no-pager diff --text bun.lock"
  },
  "workspaces": [
    "example-apps/*",
    "example-fragments/*",
    "apps/*",
    "packages/*",
    "packages-private/*",
    "scripts"
  ]
}
