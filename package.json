{
  "name": "@fragno-dev/root",
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@nanostores/query": "^0.3.4",
    "@types/eslint-config-prettier": "^6.11.3",
    "@types/eslint-plugin-tailwindcss": "^3.17.0",
    "eslint": "^9.31.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-refresh": "^0.4.20",
    "eslint-plugin-tailwindcss": "^3.18.0",
    "lefthook": "^1.12.2",
    "nanostores": "^1.0.1",
    "prettier": "3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-embed": "^0.5.0",
    "prettier-plugin-sql": "^0.19.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "tsdown": "^0.14.2",
    "turbo": "^2.5.6",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.37.0",
    "vitest": "^3.2.4"
  },
  "engines": {
    "node": ">=22",
    "bun": ">=1.2.20"
  },
  "packageManager": "bun@1.2.20",
  "private": true,
  "scripts": {
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint": "eslint .",
    "lint:fix": "eslint --fix .",
    "clean": "rm -rf **/dist **/tsconfig.tsbuildinfo **/node_modules **/.turbo **/next **/.output **/.nuxt **/.react-router",
    "clean:install": "bun run clean && bun install --linker=isolated",
    "build": "turbo run build",
    "build:watch": "turbo watch build",
    "build:ui": "turbo watch --ui tui build",
    "build:clean": "turbo run build --force",
    "types:check": "turbo run types:check"
  },
  "workspaces": [
    "examples/*",
    "packages/*",
    "packages-private/*"
  ]
}
