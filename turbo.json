{
  "$schema": "https://turborepo.com/schema.json",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "dist/**",
        ".next/**",
        "!.next/cache/**",
        ".open-next/**",
        ".output/**",
        ".nuxt/**",
        ".react-router/**",
        ".output/**",
        ".source/**",
        ".svelte-kit/**",
        "build/**"
      ]
    },
    "types:check": {
      "dependsOn": ["^build", "^types:check"]
    },
    "dev": {
      "persistent": true,
      "cache": false
    },
    "test": {
      "dependsOn": ["^build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    }
  }
}
