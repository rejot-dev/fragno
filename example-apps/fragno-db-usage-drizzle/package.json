{
  "name": "@fragno-dev/fragno-db-usage-drizzle",
  "private": true,
  "exports": {
    ".": {
      "development": "./src/mod.ts",
      "types": "./dist/mod.d.ts",
      "default": "./dist/mod.js"
    }
  },
  "main": "./dist/node/mod.js",
  "module": "./dist/node/mod.js",
  "types": "./dist/node/mod.d.ts",
  "scripts": {
    "build": "tsdown && pnpm run db:fragno:generate:all",
    "build:watch": "tsdown --watch",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "db:fragno:generate": "NODE_OPTIONS=--conditions=development pnpm exec tsx ./scripts/generate-fragno-schema.ts --dialect postgresql --out ./src/schema/fragno-schema.ts",
    "db:fragno:generate:sqlite": "NODE_OPTIONS=--conditions=development pnpm exec tsx ./scripts/generate-fragno-schema.ts --dialect sqlite --out ./src/schema/fragno-schema.sqlite.ts",
    "db:fragno:generate:mysql": "NODE_OPTIONS=--conditions=development pnpm exec tsx ./scripts/generate-fragno-schema.ts --dialect mysql --out ./src/schema/fragno-schema.mysql.ts",
    "db:fragno:generate:all": "pnpm run db:fragno:generate && pnpm run db:fragno:generate:sqlite && pnpm run db:fragno:generate:mysql",
    "db:drizzle:generate": "drizzle-kit generate --config ./drizzle.config.ts",
    "db:drizzle:generate:sqlite": "drizzle-kit generate --config ./drizzle.sqlite.config.ts",
    "db:drizzle:generate:mysql": "drizzle-kit generate --config ./drizzle.mysql.config.ts"
  },
  "type": "module",
  "dependencies": {
    "@electric-sql/pglite": "^0.3.15",
    "@fragno-dev/core": "workspace:*",
    "@fragno-dev/db": "workspace:*",
    "@fragno-dev/fragno-db-library": "workspace:*",
    "@fragno-dev/workflows": "workspace:*",
    "@fragno-dev/node": "workspace:*",
    "@fragno-dev/auth": "workspace:*",
    "drizzle-orm": "^0.44.7",
    "gunshi": "^0.26.3",
    "kysely-pglite": "^0.6.1",
    "zod": "^4.3.5"
  },
  "devDependencies": {
    "@fragno-dev/cli": "workspace:*",
    "@fragno-private/typescript-config": "workspace:*",
    "@fragno-private/vitest-config": "workspace:*",
    "@types/node": "^22.19.7",
    "@vitest/coverage-istanbul": "^3.2.4",
    "drizzle-kit": "^0.31.8",
    "gunshi": "^0.26.3",
    "vitest": "^3.2.4"
  }
}
