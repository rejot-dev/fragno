{
  "name": "@fragno-dev/lofi",
  "description": "Fragno local-first client",
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/mod.js",
  "module": "./dist/mod.js",
  "types": "./dist/mod.d.ts",
  "exports": {
    ".": {
      "development": "./src/mod.ts",
      "types": "./dist/mod.d.ts",
      "default": "./dist/mod.js"
    },
    "./cli": {
      "development": "./src/cli/index.ts",
      "types": "./dist/cli/index.d.ts",
      "default": "./dist/cli/index.js"
    },
    "./scenario": {
      "development": "./src/scenario.ts",
      "types": "./dist/scenario.d.ts",
      "default": "./dist/scenario.js"
    }
  },
  "files": [
    "dist",
    "bin"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "lint": "oxlint .",
    "types:check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest --watch"
  },
  "bin": {
    "fragno-lofi": "./bin/run.js"
  },
  "dependencies": {
    "@fragno-dev/core": "workspace:*",
    "@fragno-dev/db": "workspace:*",
    "@fragno-dev/node": "workspace:*",
    "fake-indexeddb": "^6.1.0",
    "gunshi": "^0.26.3",
    "idb": "^8.0.3",
    "superjson": "^2.2.1"
  },
  "devDependencies": {
    "@fragno-private/typescript-config": "workspace:*",
    "@fragno-private/vitest-config": "workspace:*",
    "@types/node": "^22.19.7",
    "@vitest/coverage-istanbul": "^3.2.4",
    "tsdown": "^0.15.12",
    "vitest": "^3.2.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rejot-dev/fragno.git",
    "directory": "packages/lofi"
  },
  "homepage": "https://fragno.dev",
  "license": "MIT"
}
