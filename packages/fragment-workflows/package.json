    "@fragno-private/vitest-config": "workspace:*",
    "@types/node": "^22",
    "@vitest/coverage-istanbul": "^3.2.4",
    "tsdown": "^0.15.12",
    "vitest": "^3.2.4"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "solid-js": ">=1.0.0",
    "svelte": ">=4.0.0",
